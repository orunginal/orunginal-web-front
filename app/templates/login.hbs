<!-- Login Page
==========================================-->
<div id="login" class="text-center">
    <div class="overlay">
        <div class="content">
            <div class="section-title center">
                <h1>Votre <span class="color">espace perso</span></h1>
              <p class="lead">Veuillez saisir vos identifiants</p>
                <div class="line">
                    <hr>
                </div>
            </div>

            <br/>
            <br/>
            
            <div class="col-sm-3"/>
          
            <div class="col-sm-8">
              <form {{action "authenticate" on="submit"}}>
                <div class="row">
                  <div class="col-sm-4">
                    <div class="form-group has-feedback">
                      {{input value=identification placeholder="Email" type="email" name="email" class="form-control"}}
                      {{!-- <input type="email" class="form-control" placeholder="Email"> --}}
                      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    </div>
                  </div>

                  <div class="col-sm-4">
                    <div class="form-group has-feedback">
                      {{input value=password placeholder="Password" type="password" name="password" class="form-control"}}
                      {{!-- <input type="password" class="form-control" placeholder="Password"> --}}
                      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <a href="#">I forgot my password</a><br>
                  </div>

                  <div class="col-sm-2">
                    <div class="col-xs-15">
                      <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                  </div>

                </div> <!-- /row -->
              
            </form>
            
          </div> <!-- /.col 8 -->

          <div class="col-sm-1"/>


          {{#if errorMessage}} 
              <div class="alert alert-danger"> 
                <strong>Login failed:</strong> {{errorMessage}} 
              </div> 
          {{/if}}
        </div>
    </div>
</div>


{{outlet}}
