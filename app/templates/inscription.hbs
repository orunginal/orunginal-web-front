<!-- Sign up Page
==========================================-->
<div id="login" class="text-center">
    <div class="overlay">
        <div class="content">

        	<div class="section-title center">
                <h1>Inscription <span class="color">gratuite</span></h1>
              <p class="lead">Veuillez compl√©ter le formulaire ci-dessous</p>
                <div class="line">
                    <hr>
                </div>
            </div>

            <br/>
            <br/>

            <form {{action "authenticate" on="submit"}}>
            	<div class="row">
		            <div>
		              <label for="identification">E-mail</label><br />
		              {{input value=identification placeholder="E-mail" type="text" name="email"}}
		            </div>

		            <div>
		              <label for="password">Password</label><br />
		              {{input value=password placeholder="Password" type="password" name="password"}}
		            </div>

		            <div>
		              <button type="submit">Log in</button>
		            </div>
		        </div>
          </form>

          {{#if errorMessage}} 
              <div class="alert alert-danger"> 
                <strong>Login failed:</strong> {{errorMessage}} 
              </div> 
          {{/if}}
        </div>
    </div>
</div>


{{outlet}}
